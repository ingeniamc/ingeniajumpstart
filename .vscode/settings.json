{
    "mypy.configFile": "mypy.ini",
    // Mypy extension will use the active interpreter for type checking.
    // If you get type errors, make sure you selected the correct virtual environment!
    // Ctrl + shift + p -> Python: select interpreter
    "mypy.runUsingActiveInterpreter": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.formatting.provider": "none",
    "qtForPython.qmlls.enabled": true,
    "qtForPython.rcc.liveExecution.enabled": true,
}